package Hafta5;

public class Main {

	public static void main(String[] args) {
		
		
		Canli canli1 = new Kedi("Boncuk",3);
		Canli canli2 = new Kopek("Karabaş",6);
		
		
		
	}
	
	public void sesCikartmaFonk(Canli canli) {
		
		if(canli instanceof Kopek) {
			
			Kopek kopek = (Kopek)canli;
			kopek.sesCikar();
			
		}
		else if(canli instanceof Kedi) {
			
			Kedi kedi = (Kedi) canli;
			kedi.sesCikar();
			
		}
		else {
			System.out.println("Yanlış Tür Yolladınız!");
		}
		
	}
	
	
}
